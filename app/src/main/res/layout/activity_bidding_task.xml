<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/design_toolbar_general" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@color/appThemeColor_1">

        <View
            android:id="@+id/gradientArea"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_minus60sdp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/headingArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/bidAmountHtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16ssp"
                            app:customTypeFace="@string/system_medium"
                            tools:text="long hair " />

                        <com.view.MTextView
                            android:id="@+id/bidAmountVtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/_20ssp"
                            app:customTypeFace="@string/system_medium"
                            tools:text="long hair " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/serviceNameTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="#141414"
                            android:textSize="@dimen/_14ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="long hair " />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/finalamountArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.view.MTextView
                            android:id="@+id/finalHtxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:layout_weight="1"
                            android:textColor="@color/appThemeColor_Dark_1"
                            android:textSize="@dimen/_16ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="long hair amount" />

                        <com.view.MTextView
                            android:id="@+id/finalAmountVtxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:layout_gravity="center"
                            android:textColor="@color/appThemeColor_Dark_1"
                            android:textSize="@dimen/_16ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="long hair " />
                    </LinearLayout>

                    <com.view.MTextView
                        android:id="@+id/commentHTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textColor="#141414"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone"
                        app:customTypeFace="@string/system_medium"
                        tools:text="special Instuction " />

                    <com.view.MTextView
                        android:id="@+id/commentVTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textColor="#141414"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone"
                        app:customTypeFace="@string/system_regular"
                        tools:text="Instuction " />

                    <com.view.MTextView
                        android:id="@+id/statusMsgTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textColor="#141414"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone"
                        app:customTypeFace="@string/system_regular"
                        tools:text="Instuction " />

                    <com.view.MTextView
                        android:id="@+id/dateTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"
                        app:customTypeFace="@string/system_regular"
                        tools:text="special Instuction " />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/providerArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/providerTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textAlignment="viewStart"
                        android:textColor="#141414"
                        android:textSize="@dimen/_16ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="long hair " />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/providersRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_bid_received_design" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/loader"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_80sdp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
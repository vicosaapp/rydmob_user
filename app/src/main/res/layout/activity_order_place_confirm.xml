<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/deliverall_design_toolbar_general" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/success" />

        <com.view.MTextView
            android:id="@+id/placeOrderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:padding="@dimen/_10ssp"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:textAlignment="center"
            android:textSize="@dimen/txt_size_14"
            app:customTypeFace="@string/system_bold"
            tools:ignore="RtlCompat"
            tools:text="booking approved" />

        <com.view.MTextView
            android:id="@+id/placeOrderNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:textAlignment="center"
            android:textColor="@color/textSub23Pro_gray"
            android:textSize="@dimen/txt_size_14"
            app:customTypeFace="@string/system_bold"
            tools:ignore="RtlCompat"
            tools:text="Your Order isPlaced and will be deliver soon" />

        <include
            android:id="@+id/btn_type2"
            layout="@layout/btn_type_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_btn_height"
            android:layout_margin="@dimen/_15sdp" />
    </LinearLayout>
</RelativeLayout>
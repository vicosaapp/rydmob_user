                                 android:background="@drawable/btn_border"
                                 android:backgroundTint="@color/text23Pro_Dark"
                                 android:paddingStart="@dimen/_12sdp"
                                 android:paddingTop="@dimen/_4sdp"
                                 android:layout_gravity="center"
                                 android:paddingEnd="@dimen/_12sdp"
                                 android:paddingBottom="@dimen/_4sdp"
                                 android:textColor="@color/white"
                                 android:textSize="@dimen/_12ssp"
                                 app:customTypeFace="@string/system_regular"
                                 tools:ignore="NestedWeights"
                                 tools:text="+ New Listing" />
                         </LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="#F6F6F6"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:visibility="visible">

                            <com.view.MTextView
                                android:id="@+id/txtRentItemTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_13ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="Want to register fuybefgbvdosuiovh" />

                            <com.view.MTextView
                                android:id="@+id/txtRentItemNewPost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_border"
                                android:backgroundTint="@color/text23Pro_Dark"
                                android:paddingStart="@dimen/_12sdp"
                                android:paddingTop="@dimen/_4sdp"
                                android:paddingEnd="@dimen/_12sdp"
                                android:paddingBottom="@dimen/_4sdp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_regular"
                                tools:ignore="NestedWeights"
                                tools:text="+ New Listing" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rentItemCategoryArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/rentItemCategoryHTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_14ssp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="rent item category" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvRentItemCategory"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:clipToPadding="false"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_15sdp"
                                android:paddingEnd="0dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:orientation="horizontal">

                            <com.view.MTextView
                                android:id="@+id/rentItemPostListHTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_14ssp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="@string/app_name" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/card_view_23_white_line"
                                android:orientation="horizontal">

                                <com.view.MTextView
                                    android:id="@+id/buySaleTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_6sdp"
                                    android:paddingEnd="@dimen/_6sdp"
                                    android:textColor="@color/text23Pro_Dark"
                                    android:textSize="@dimen/_8ssp"
                                    app:customTypeFace="@string/system_semi_bold"
                                    tools:text="buy" />

                                <com.view.MTextView
                                    android:id="@+id/rentTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:background="@drawable/shadow_5dp_r"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_6sdp"
                                    android:paddingEnd="@dimen/_6sdp"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8ssp"
                                    app:customTypeFace="@string/system_semi_bold"
                                    tools:text="rent" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/listArea"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:orientation="vertical"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                            <com.view.MTextView
                                android:id="@+id/NoDataTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingTop="@dimen/_25sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:textSize="@dimen/txt_size_14"
                                android:visibility="gone"
                                app:customTypeFace="@string/system_regular"
                                tools:text="no data"
                                tools:visibility="visible" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvRentItemRecommendation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                app:spanCount="2"
                                tools:itemCount="3"
                                tools:listitem="@layout/item_rent_item_post" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/DataLoadingArea"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent_full"
                            android:orientation="vertical"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                            <ProgressBar
                                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_40sdp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </com.general.files.MySwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/topArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appThemeColor_1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/appThemeColor_1"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/backImgView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_back_arrow_1" />

                <com.view.MTextView
                    android:id="@+id/headerAddressTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_location_pro"
                    android:drawableEnd="@drawable/ic_down_arrow_header"
                    android:drawablePadding="@dimen/_6sdp"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/system_regular"
                    app:drawableTint="@color/white"
                    tools:text="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/search_shape">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/searchIcon"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_11sdp"
                        android:clickable="false"
                        app:srcCompat="@drawable/ic_search" />

                    <EditText
                        android:id="@+id/searchTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_9sdp"
                        android:layout_toStartOf="@+id/loaderView"
                        android:layout_toEndOf="@+id/searchIcon"
                        android:background="@null"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textColorHint="@color/text23Pro_Light"
                        android:textSize="@dimen/_10ssp"
                        app:customTypeFace="@string/system_regular"
                        tools:hint="search"
                        tools:ignore="Autofill,LabelFor,TextFields" />

                    <com.view.anim.loader.AVLoadingIndicatorView
                        android:id="@+id/loaderView"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:background="@android:color/transparent"
                        app:indicator="BallScaleRipple"
                        app:indicator_color="@color/Gray" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageCancel"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="@dimen/_7sdp"
                        app:srcCompat="@mipmap/ic_cancel_cab_request"
                        app:tint="@color/Gray" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/filterArea"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/search_shape"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:clickable="false"
                        app:srcCompat="@drawable/ic_filter_icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/loading"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</layout>
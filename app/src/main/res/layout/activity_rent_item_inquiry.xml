<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/design_toolbar_general" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardView23ProBG"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_15ssp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/nameHTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_13sdp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="Name" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardUseCompatPadding="true">

                            <com.view.editBox.MaterialEditText
                                android:id="@+id/userNameBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_13ssp"
                                app:customTypeFace="@string/system_regular"
                                app:met_hideUnderline="true"
                                tools:hint="Enter your name" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.view.MTextView
                                android:id="@+id/emailHTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_13sdp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="Email" />

                            <com.view.MTextView
                                android:id="@+id/emailHTxtRequired"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardUseCompatPadding="true">

                            <com.view.editBox.MaterialEditText
                                android:id="@+id/userEmailBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_13ssp"
                                app:customTypeFace="@string/system_regular"
                                app:met_hideUnderline="true"
                                tools:hint="Enter your email" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/userPhoneHTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/text23Pro_Dark"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="user phone" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/mobileNoArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/countryArea"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/countryImg"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        app:srcCompat="@drawable/ic_card_default"
                                        tools:ignore="TooDeepLayout" />

                                    <com.view.MTextView
                                        android:id="@+id/countryCodeTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_3sdp"
                                        android:includeFontPadding="false"
                                        android:textAlignment="viewStart"
                                        android:textSize="@dimen/_13ssp"
                                        app:customTypeFace="@string/system_regular"
                                        tools:text="+91" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/countryDropImg"
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:layout_gravity="center|end"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        app:srcCompat="@drawable/ic_down_arrow"
                                        app:tint="@color/Gray" />
                                </LinearLayout>

                                <View
                                    android:layout_width="0.7dp"
                                    android:layout_height="@dimen/_20ssp"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:background="@color/Gray" />

                                <com.view.editBox.MaterialEditText
                                    android:id="@+id/mobileBox"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.70"
                                    android:imeOptions="actionDone"
                                    android:inputType="number"
                                    android:singleLine="true"
                                    android:textColor="@color/text23Pro_Dark"
                                    android:textSize="@dimen/_13ssp"
                                    app:customTypeFace="@string/system_regular"
                                    app:met_hideUnderline="true"
                                    tools:hint="enter number" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.view.MTextView
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_btn_height"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/btn_border_1"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                app:customTypeFace="@string/system_semi_bold"
                tools:text="submit" />


        </RelativeLayout>
    </LinearLayout>
</layout>
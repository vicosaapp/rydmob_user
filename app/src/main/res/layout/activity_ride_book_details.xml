<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_general" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomArea"
            android:layout_below="@+id/toolbar_include"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <com.view.MTextView
                    android:id="@+id/rideDetailsTitleTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/system_bold"
                    tools:text="route details" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/card_view_23_gray_shadow"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="@dimen/_9sdp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_9sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_9sdp"
                                    android:layout_height="@dimen/_9sdp"
                                    app:srcCompat="@drawable/round_shape"
                                    app:tint="#008000" />

                                <com.view.DividerView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layerType="software"
                                    app:dividerColor="@color/view23ProBG"
                                    app:dividerDashGap="4dp"
                                    app:dividerDashLength="4dp"
                                    app:dividerOrientation="vertical" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_marginEnd="@dimen/_9sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.view.MTextView
                                        android:id="@+id/startCityTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textAlignment="viewStart"
                                        android:textColor="@color/text23Pro_Dark"
                                        android:textSize="@dimen/_12ssp"
                                        app:customTypeFace="@string/system_semi_bold"
                                        tools:text="@string/app_name" />

                                    <com.view.MTextView
                                        android:id="@+id/startTimeTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textAlignment="viewEnd"
                                        android:textColor="@color/appThemeColor_1"
                                        android:textSize="@dimen/_10ssp"
                                        app:customTypeFace="@string/system_semi_bold"
                                        tools:text="16:55" />
                                </LinearLayout>

                                <com.view.MTextView
                                    android:id="@+id/startAddressTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/textSub23Pro_gray"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/system_regular"
                                    tools:text="sf dfsdstwesd wet ewtwetwet  etwet wT  EDGwetf ET Wgcdd get dgstgedtewfsdsDfdre t ed tESD ET TE" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:layout_marginTop="@dimen/_minus3sdp"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_9sdp"
                                android:layout_height="@dimen/_9sdp"
                                app:srcCompat="@drawable/round_shape"
                                app:tint="#CA3939" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_minus3sdp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.view.MTextView
                                        android:id="@+id/endCityTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textAlignment="viewStart"
                                        android:textColor="@color/text23Pro_Dark"
                                        android:textSize="@dimen/_12ssp"
                                        app:customTypeFace="@string/system_semi_bold"
                                        tools:text="@string/app_name" />

                                    <com.view.MTextView
                                        android:id="@+id/endTimeTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textAlignment="viewEnd"
                                        android:textColor="@color/appThemeColor_1"
                                        android:textSize="@dimen/_10ssp"
                                        app:customTypeFace="@string/system_semi_bold"
                                        tools:text="16:55" />
                                </LinearLayout>

                                <com.view.MTextView
                                    android:id="@+id/endAddressTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginBottom="@dimen/_9sdp"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/textSub23Pro_gray"
                                    android:textSize="@dimen/_11ssp"
                                    app:customTypeFace="@string/system_regular"
                                    tools:text="@string/app_name" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_9sdp"
                        android:layout_marginEnd="@dimen/_9sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_4sdp">

                        <com.view.MTextView
                            android:id="@+id/dateTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_10ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="tue, 13th feb 23" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end|center"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/priceTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/_10ssp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="$50" />

                            <com.view.MTextView
                                android:id="@+id/priceMsgTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text23Pro_Light"
                                android:textSize="@dimen/_9ssp"
                                app:customTypeFace="@string/system_regular"
                                tools:text="per passenger" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/paymentArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/paymentHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="Payment Details" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/paymentModeHTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text23Pro_Light"
                            android:textSize="@dimen/_10ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="Payment Mode:" />

                        <com.view.MTextView
                            android:id="@+id/paymentModeVTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_10ssp"
                            app:customTypeFace="@string/system_bold"
                            tools:text="Cash" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/summaryDataArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/card_view_23_gray_shadow"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/summaryData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_15sdp"
                            android:background="@drawable/card_view_23_white_shadow"
                            android:orientation="vertical" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/carDetailsHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="Car Details" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/card_view_23_white_shadow"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_140sdp">

                            <com.view.SelectableRoundedImageView
                                android:id="@+id/setImgView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                app:sriv_left_top_corner_radius="@dimen/_7sdp"
                                app:sriv_oval="false"
                                app:sriv_right_top_corner_radius="@dimen/_7sdp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_11sdp">

                            <com.view.MTextView
                                android:id="@+id/carMakeTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_13ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="@string/app_name" />

                            <com.view.MTextView
                                android:id="@+id/carModelColorTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:drawableStart="@drawable/ic_car"
                                android:drawablePadding="@dimen/_4sdp"
                                android:textColor="@color/text23Pro_Light"
                                android:textSize="@dimen/_10ssp"
                                app:customTypeFace="@string/system_regular"
                                tools:text="@string/app_name" />

                            <com.view.MTextView
                                android:id="@+id/carNumberPlateTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:drawableStart="@drawable/ic_car_plate"
                                android:drawablePadding="@dimen/_4sdp"
                                android:textColor="@color/text23Pro_Light"
                                android:textSize="@dimen/_10ssp"
                                app:customTypeFace="@string/system_regular"
                                tools:text="@string/app_name" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/driverHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="Driver Details" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/card_view_23_white_shadow"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_9sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_12sdp">

                        <com.view.SelectableRoundedImageView
                            android:id="@+id/rideDriverImg"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:scaleType="centerCrop"
                            app:sriv_left_bottom_corner_radius="@dimen/_6sdp"
                            app:sriv_left_top_corner_radius="@dimen/_6sdp"
                            app:sriv_oval="false"
                            app:sriv_right_bottom_corner_radius="@dimen/_6sdp"
                            app:sriv_right_top_corner_radius="@dimen/_6sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/_45sdp"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/rideDriverName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text23Pro_Dark"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="@string/app_name" />

                            <com.view.MTextView
                                android:id="@+id/rideDriverPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_call_1"
                                android:drawablePadding="@dimen/_6sdp"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/_10ssp"
                                app:customTypeFace="@string/system_regular"
                                tools:text="+15878" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/addNotesHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Additional Notes" />

                    <com.view.MTextView
                        android:id="@+id/addNotesMsgHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:textColor="@color/textSub23Pro_gray"
                        android:textSize="@dimen/_10ssp"
                        app:customTypeFace="@string/system_regular"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cancelRideBtnArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <include
                        android:id="@+id/cancelRideBtn"
                        layout="@layout/btn_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/bottomArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/card_view_23_white_top_shadow"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/totalHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        app:customTypeFace="@string/system_bold"
                        tools:text="total price" />

                    <com.view.MTextView
                        android:id="@+id/noOfPassengerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textSub23Pro_gray"
                        android:textSize="@dimen/_13sdp"
                        app:customTypeFace="@string/system_regular"
                        tools:text="for 1 passenger" />
                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/fPriceTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/_15sdp"
                    app:customTypeFace="@string/system_bold"
                    tools:text="$ 77.00" />
            </LinearLayout>

            <include
                android:id="@+id/continueBtn"
                layout="@layout/btn_type_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_btn_height"
                android:layout_marginTop="@dimen/_15sdp" />
        </LinearLayout>
    </RelativeLayout>
</layout>
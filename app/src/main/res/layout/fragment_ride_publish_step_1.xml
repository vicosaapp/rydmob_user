<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rideStartEndLocationArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/card_view_23_white_shadow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_13sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_9sdp"
                        android:layout_height="@dimen/_9sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:srcCompat="@drawable/round_shape"
                        app:tint="#008000" />

                    <com.view.DividerView
                        android:layout_width="@dimen/_9sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layerType="software"
                        app:dividerColor="@color/view23ProBG"
                        app:dividerDashGap="4dp"
                        app:dividerDashLength="4dp"
                        app:dividerOrientation="vertical" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_9sdp"
                        android:layout_height="@dimen/_9sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:srcCompat="@drawable/round_shape"
                        app:tint="#CA3939" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_view_23_gray_flat">

                        <com.view.MTextView
                            android:id="@+id/startLocationBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:ellipsize="end"
                            android:gravity="start|center"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text23Pro_Dark"
                            android:textColorHint="@color/text23Pro_Light"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:hint="leaving from" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_view_23_gray_flat">

                        <com.view.MTextView
                            android:id="@+id/endLocationBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:ellipsize="end"
                            android:gravity="start|center"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text23Pro_Dark"
                            android:textColorHint="@color/text23Pro_Light"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            tools:hint="going to" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationFlipArea"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_23sdp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/search_shape"
                    android:backgroundTint="@color/text23Pro_Dark"
                    android:padding="@dimen/_5sdp"
                    tools:ignore="UselessParent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_flip"
                        app:tint="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mapRidePublishContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
</layout>
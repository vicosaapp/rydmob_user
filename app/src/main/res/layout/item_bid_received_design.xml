<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:elevation="3dp"
            android:minHeight="@dimen/_80sdp"
            android:paddingTop="@dimen/_25sdp"
            android:paddingBottom="@dimen/_20sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/cardArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/contentArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_100sdp"
                    android:layout_marginStart="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_8sdp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="start|top"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_10ssp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.view.MTextView
                                    android:id="@+id/nameTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_2sdp"

                                    android:drawablePadding="@dimen/_5sdp"
                                    android:gravity="start"
                                    android:maxLines="3"
                                    android:textAlignment="viewStart"
                                    android:textColor="#2E2E2E"
                                    android:textSize="@dimen/_13ssp"
                                    app:customTypeFace="@string/system_medium"
                                    android:ellipsize="end"
                                    tools:text="john wick" />

                                <ImageView
                                    android:id="@+id/chatImg"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:src="@drawable/ic_chat_bidding_option" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"


                                android:orientation="vertical"
                                android:visibility="visible">

                                <com.view.MTextView
                                    android:id="@+id/bidAmountTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:ellipsize="end"
                                    android:gravity="start"
                                    android:maxLines="2"

                                    android:textAlignment="viewStart"
                                    android:textColor="@color/appThemeColor_1"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="normal"
                                    tools:text="test comment test comment test comment test comment test comment test comment test comment test comment test comment " />

                                <com.view.MTextView
                                    android:id="@+id/txtBidAmountDesc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="@string/app_name"
                                    android:textAlignment="viewStart"
                                    android:textColor="#767676"
                                    android:textSize="@dimen/_9ssp"
                                    app:customTypeFace="@string/system_regular" />

                                <com.view.MTextView
                                    android:id="@+id/offerAmountTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:ellipsize="end"
                                    android:gravity="start"
                                    android:maxLines="2"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="normal"
                                    tools:text="test comment test comment test comment test comment test comment test comment test comment test comment test comment " />

                                <com.view.MTextView
                                    android:id="@+id/txtReOfferAmountDesc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="@string/app_name"
                                    android:textAlignment="viewStart"
                                    android:textColor="#767676"
                                    android:textSize="@dimen/_9ssp"
                                    app:customTypeFace="@string/system_regular" />

                                <com.view.MTextView
                                    android:id="@+id/finalAmountTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:ellipsize="end"
                                    android:gravity="start"
                                    android:maxLines="2"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="normal"
                                    android:visibility="gone"
                                    tools:text="test comment test comment test comment test comment test comment test comment test comment test comment test comment " />


                            </LinearLayout>

                            <com.view.simpleratingbar.SimpleRatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/labelFeatured"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"

                                android:padding="1dp"
                                app:SRB_fillColor="@color/ratingfill"
                                app:SRB_isIndicator="true"
                                app:SRB_numberOfStars="5"
                                app:SRB_starBackgroundColor="@color/gray_holo_light"
                                app:SRB_starSize="@dimen/_12ssp"
                                app:SRB_stepSize="0.5" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/statusTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="gone"
                    app:customTypeFace="@string/system_medium"
                    tools:text="test comment test com " />

                <com.view.MTextView
                    android:id="@+id/txtFinalAmountStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible"
                    app:customTypeFace="@string/system_medium"
                    tools:text="test comment test com " />

                <LinearLayout
                    android:id="@+id/btnArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.view.MTextView
                        android:id="@+id/acceptTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selected_border"
                        android:backgroundTint="@color/appThemeColor_1"
                        android:gravity="center"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Accept" />

                    <com.view.MTextView
                        android:id="@+id/declineTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:background="@drawable/unselected_border"
                        android:backgroundTint="@color/appThemeColor_1"
                        android:gravity="center"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Decline" />
                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/offerTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/unselected_border"
                    android:backgroundTint="@color/appThemeColor_1"
                    android:gravity="center"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:textAllCaps="true"
                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/txt_size_14"
                    android:visibility="gone"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="Rewise offer" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <RelativeLayout


        android:id="@+id/driverImgArea"
        android:layout_width="@dimen/_80sdp"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp">

        <com.view.SelectableRoundedImageView


            android:id="@+id/passengerImgView"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@mipmap/ic_no_pic_user"
            android:scaleType="centerCrop"
            app:sriv_border_color="@color/gray"
            app:sriv_border_width="1dip"
            app:sriv_left_bottom_corner_radius="20dip"
            app:sriv_left_top_corner_radius="20dip"
            app:sriv_oval="true"
            app:sriv_right_bottom_corner_radius="20dip"
            app:sriv_right_top_corner_radius="20dip" />


    </RelativeLayout>
</RelativeLayout>
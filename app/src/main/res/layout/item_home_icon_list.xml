<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"


    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/cuisines_shadow"
        android:layout_width="@dimen/_95sdp"
        android:layout_height="@dimen/_95sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:padding="0dp"
        android:clickable="true"
        android:focusable="true">

    <LinearLayout
        android:background="@drawable/roundcolorect_cusines"
        android:id="@+id/contentArea"
        android:layout_width="@dimen/_95sdp"
        android:layout_height="@dimen/_95sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:padding="0dp"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
           >

            <RelativeLayout
                android:layout_marginBottom="@dimen/_1sdp"
                android:id="@+id/categoryArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:clipChildren="true"
                android:clipToPadding="false"
                android:orientation="vertical"
               >


                <com.view.MTextView
                    android:id="@+id/serviceNameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:text="Taxi"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    app:customTypeFace="@string/system_bold" />

                <ImageView
                    android:id="@+id/serviceImg"
                    android:layout_width="@dimen/_66sdp"
                    android:layout_height="@dimen/_66sdp"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center|bottom"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:clickable="false"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/categoryRTLImgView"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="@dimen/_minus10sdp"
                    android:layout_marginBottom="@dimen/_minus5sdp"
                    android:clickable="false"
                    android:elevation="@dimen/_2sdp"
                    android:focusable="true"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
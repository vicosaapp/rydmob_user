<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restaurantAdptrLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/dataArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="horizontal">

                <com.view.MTextView
                    android:id="@+id/orderNoTxtView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:gravity="start|center_vertical"
                    android:layout_gravity="center"
                    android:text=""
                    android:includeFontPadding="false"
                    android:textColor="#141414"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/system_semi_bold" />



                <LinearLayout
                    android:id="@+id/statusArea"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="end|center"
                    android:background="@drawable/login_border"
                    android:gravity="center|end"
                    android:orientation="horizontal">

                    <com.view.MTextView
                        android:id="@+id/orderStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text=""
                        app:textAllCaps="true"
                        android:textColor="@color/appThemeColor_TXT_1"
                        android:textSize="@dimen/_8ssp"
                        app:customTypeFace="@string/system_semi_bold" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/contentArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/serviceArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|start|center"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:gravity="top|start|center"
                                    android:orientation="vertical">

<!--                                    <com.view.SelectableRoundedImageView-->
<!--                                        android:id="@+id/OrderHotelImage"-->
<!--                                        android:layout_width="@dimen/_50sdp"-->
<!--                                        android:layout_height="@dimen/_50sdp"-->
<!--                                        android:layout_centerVertical="true"-->
<!--                                        android:layout_gravity="top|start|center"-->
<!--                                        android:gravity="top|start|center"-->
<!--                                        android:scaleType="centerCrop"-->
<!--                                        app:sriv_left_bottom_corner_radius="20dip"-->
<!--                                        app:sriv_left_top_corner_radius="20dip"-->
<!--                                        app:sriv_oval="true"-->
<!--                                        app:sriv_right_bottom_corner_radius="20dip"-->
<!--                                        app:sriv_right_top_corner_radius="20dip" />-->
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:elevation="0dp"
                                        android:layout_gravity="start|center"
                                        app:cardBackgroundColor="#ffffff"
                                        app:cardCornerRadius="@dimen/_8sdp"
                                        app:cardElevation="0dp">
                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/OrderHotelImage"
                                            android:layout_width="@dimen/_50sdp"
                                            android:layout_height="@dimen/_50sdp"
                                            android:layout_centerVertical="true"
                                            android:layout_gravity="top|start|center"
                                            android:gravity="top|start|center"
                                            android:scaleType="centerCrop" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:orientation="vertical">
                                        <com.view.MTextView
                                            android:id="@+id/orderHotelName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start|center_vertical"
                                            android:layout_weight="1"
                                            android:maxLines="2"
                                            android:text=""
                                            android:includeFontPadding="false"
                                            android:textAlignment="viewStart"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_13ssp"
                                            app:customTypeFace="@string/system_semi_bold" />

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/location"
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:clickable="false"
                                            android:src="@drawable/ic_loc_icon"
                                            app:tint="@color/appThemeColor_1" />
                                        <com.view.MTextView
                                            android:id="@+id/orderHotelAddress"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:clickable="false"
                                            android:ellipsize="end"
                                            android:gravity="start|center_vertical"
                                            android:includeFontPadding="false"
                                            android:text=""
                                            android:textAlignment="viewStart"
                                            android:textColor="@color/appThemeColor_1"
                                            android:textSize="@dimen/_11ssp"
                                            app:customTypeFace="@string/system_regular" />

                                    </LinearLayout>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/typeArea"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:elevation="0dp"
                                        app:cardCornerRadius="@dimen/_8sdp"
                                        app:cardElevation="0dp">

                                        <!--
                                                                android:id="@+id/etypeTxt"
                                        -->

                                        <com.view.MTextView
                                            android:id="@+id/serviceNameTxt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:ellipsize="marquee"
                                            android:gravity="center"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:singleLine="true"
                                            android:text=""
                                            android:includeFontPadding="false"
                                            android:fadingEdge="horizontal"
                                            android:textAlignment="center"
                                            android:textColor="#ffffff"
                                            android:textSize="@dimen/_8ssp" />

                                        <com.view.MTextView
                                            android:id="@+id/packageTxt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start|center_vertical"
                                            android:layout_marginStart="3dp"
                                            android:layout_marginEnd="10dp"
                                            android:gravity="center"
                                            android:text=""
                                            android:includeFontPadding="false"
                                            android:textColor="#272727"
                                            android:textSize="@dimen/txt_size_14"
                                            android:visibility="gone" />
                                    </androidx.cardview.widget.CardView>
                                    <LinearLayout
                                        android:id="@+id/ongoingBtnArea"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:id="@+id/TrackOrderBtnArea"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"

                                            android:gravity="center"
                                            android:visibility="gone">

                                            <ImageView
                                                android:background="@drawable/history_border"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"/>

                                            <com.view.MTextView
                                                android:id="@+id/btn_trackOrder"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="@dimen/_2sdp"
                                                android:layout_marginEnd="@dimen/_2sdp"
                                                android:ellipsize="marquee"
                                                android:gravity="center"
                                                android:marqueeRepeatLimit="marquee_forever"
                                                android:singleLine="true"
                                                android:text="Track Order"
                                                android:textAlignment="center"
                                                android:textAllCaps="true"
                                                android:textColor="@color/black"
                                                android:textStyle="normal"
                                                app:autoSizeMaxTextSize="@dimen/_12sdp"
                                                app:autoSizeMinTextSize="@dimen/_6sdp"
                                                app:autoSizeStepGranularity="2sp"
                                                app:autoSizeTextType="uniform"
                                                app:customTypeFace="@string/system_medium" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/vieDetailsArea"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:visibility="gone">
                                            <ImageView
                                                android:background="@drawable/history_border"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"/>

                                            <com.view.MTextView
                                                android:id="@+id/btn_viewDetails"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="@dimen/_2sdp"
                                                android:layout_marginEnd="@dimen/_2sdp"
                                                android:ellipsize="marquee"
                                                android:gravity="center"
                                                android:singleLine="true"
                                                tools:text="View Details"
                                                android:includeFontPadding="false"
                                                android:textAlignment="center"
                                                android:textAllCaps="true"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_12sdp"
                                                android:textStyle="normal"
                                                app:autoSizeMaxTextSize="@dimen/_12sdp"
                                                app:autoSizeMinTextSize="@dimen/_6sdp"
                                                app:autoSizeStepGranularity="2sp"
                                                app:autoSizeTextType="uniform"
                                                app:customTypeFace="@string/system_medium" />

                                        </RelativeLayout>


                                        <RelativeLayout
                                            android:id="@+id/helpArea"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:layout_weight="1"
                                            android:visibility="gone"
                                            android:gravity="center">
                                            <ImageView
                                                android:background="@drawable/button_background"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"></ImageView>

                                            <com.view.MTextView
                                                android:id="@+id/btn_help"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="@dimen/_2sdp"
                                                android:layout_marginEnd="@dimen/_2sdp"
                                                android:ellipsize="marquee"
                                                android:gravity="center"
                                                android:marqueeRepeatLimit="marquee_forever"
                                                android:singleLine="true"
                                                android:text=""
                                                android:includeFontPadding="false"
                                                android:textAlignment="center"
                                                android:textAllCaps="true"
                                                android:textColor="@color/white"
                                                android:textStyle="normal"
                                                app:autoSizeMaxTextSize="@dimen/_12sdp"
                                                app:autoSizeMinTextSize="@dimen/_6sdp"
                                                app:autoSizeStepGranularity="2sp"
                                                app:autoSizeTextType="uniform"
                                                app:customTypeFace="@string/system_medium" />
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/RatingArea"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:layout_weight="1"
                                            android:visibility="gone"
                                            android:gravity="center">
                                            <ImageView
                                                android:background="@drawable/button_background"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"></ImageView>

                                            <com.view.MTextView
                                                android:id="@+id/btn_Rating"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="@dimen/_2sdp"
                                                android:layout_marginEnd="@dimen/_2sdp"
                                                android:ellipsize="marquee"
                                                android:gravity="center"
                                                android:marqueeRepeatLimit="marquee_forever"
                                                android:singleLine="true"
                                                android:text=""
                                                android:includeFontPadding="false"
                                                android:textAlignment="center"
                                                android:textAllCaps="true"
                                                android:textColor="@color/white"
                                                android:textStyle="normal"
                                                app:autoSizeMaxTextSize="@dimen/_12sdp"
                                                app:autoSizeMinTextSize="@dimen/_6sdp"
                                                app:autoSizeStepGranularity="2sp"
                                                app:autoSizeTextType="uniform"
                                                app:customTypeFace="@string/system_medium" />
                                        </RelativeLayout>


                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:visibility="gone"
                        android:id="@+id/totalHtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="end|center"
                        android:text="Total"
                        android:textAlignment="viewEnd"
                        android:textColor="#929292"
                        android:textSize="@dimen/_10sdp"
                        app:customTypeFace="@string/system_regular" />

                        <com.autofit.et.lib.AutoFitEditText
                            android:id="@+id/totalVtxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_85sdp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:gravity="end|center"
                            android:text=""
                            android:includeFontPadding="false"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            app:customTypeFace="@string/system_semi_bold" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="#E3E3E3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.view.MTextView
                        android:id="@+id/orderDateVTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/_10sdp"
                        app:customTypeFace="@string/system_semi_bold" />

                    <com.view.MTextView
                        android:id="@+id/orderTimeVTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text=""
                        android:includeFontPadding="false"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/_10sdp"
                        app:customTypeFace="@string/system_semi_bold" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>




<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/itemArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/card_view_23_white_shadow"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/photosArea"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_84sdp">

            <com.view.SelectableRoundedImageView
                android:id="@+id/ivRentItemImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="centerCrop"
                app:sriv_left_bottom_corner_radius="0dp"
                app:sriv_left_top_corner_radius="@dimen/_6sdp"
                app:sriv_oval="false"
                app:sriv_right_bottom_corner_radius="0dp"
                app:sriv_right_top_corner_radius="@dimen/_6sdp" />

            <com.view.MTextView
                android:id="@+id/rentPostStatusTagTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/right_radius_1"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_6ssp"
                app:customTypeFace="@string/system_bold"
                tools:ignore="RelativeOverlap"
                tools:text="@string/app_name" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFav"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:srcCompat="@drawable/ic_heart_on_fav_store_new" />

            <RelativeLayout
                android:id="@+id/userApproveArea"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/circle_shadow_big"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_secure_user"
                    app:tint="@color/appThemeColor_1" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_minus10sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="vertical">

            <com.view.MTextView
                android:id="@+id/txtPostPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_10ssp"
                app:customTypeFace="@string/system_bold"
                tools:text="@string/app_name" />

            <com.view.MTextView
                android:id="@+id/txtPostDurationStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_minus1sdp"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/text23Pro_Light"
                android:textSize="@dimen/_6ssp"
                app:customTypeFace="@string/system_regular"
                tools:text="@string/app_name" />

            <com.view.MTextView
                android:id="@+id/txtPostTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/appThemeColor_1"
                android:textSize="@dimen/_8ssp"
                app:customTypeFace="@string/system_semi_bold"
                tools:text="@string/app_name" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewTypeArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                app:cardBackgroundColor="@color/appThemeColor_1"
                app:cardCornerRadius="@dimen/_8sdp">

                <com.view.MTextView
                    android:id="@+id/typeNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/_5ssp"
                    android:paddingTop="@dimen/_2ssp"
                    android:paddingEnd="@dimen/_5ssp"
                    android:paddingBottom="@dimen/_2ssp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    app:customTypeFace="@string/system_regular"
                    tools:text="@string/app_name" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/postAddressArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_12sdp"
                    app:srcCompat="@drawable/ic_location_pro"
                    app:tint="@color/text23Pro_Dark" />

                <com.view.MTextView
                    android:id="@+id/postAddressTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textAlignment="viewStart"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_8ssp"
                    app:customTypeFace="@string/system_regular"
                    tools:text="dfjsghdfsdg fjg fdd fhfgsdgfsdhgfsjdgfsdjgfjsgre gutgrfe grtrtqwer gfruretur ugtrwqtert dfgrterttwue e rgewtrwe tyrerfgtert rtgrerg ftgsdufye eutfgewrtwe eyrtgweurtergweugrwer" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/itemArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_23_gray_shadow"
        android:orientation="vertical">

        <com.view.MTextView
            android:id="@+id/bookNoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/text23Pro_Dark"
            android:textSize="@dimen/_11ssp"
            app:customTypeFace="@string/system_bold"
            tools:text="Booking#" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <com.view.SelectableRoundedImageView
                android:id="@+id/driverProfileImgView"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="centerCrop"
                app:sriv_oval="true" />

            <com.view.MTextView
                android:id="@+id/driverNameTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="@dimen/_7sdp"
                android:paddingEnd="0dp"
                android:textAlignment="viewStart"
                android:textColor="@color/appThemeColor_1"
                android:textSize="@dimen/_12ssp"
                app:customTypeFace="@string/system_semi_bold"
                tools:text="16:55" />

            <androidx.cardview.widget.CardView
                android:id="@+id/statusView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/appThemeColor_1"
                app:cardCornerRadius="@dimen/_4sdp">

                <com.view.MTextView
                    android:id="@+id/statusTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="take away" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_9sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_9sdp"
                        android:layout_height="@dimen/_9sdp"
                        app:srcCompat="@drawable/round_shape"
                        app:tint="#008000" />

                    <com.view.DividerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layerType="software"
                        app:dividerColor="@color/view23ProBG"
                        app:dividerDashGap="4dp"
                        app:dividerDashLength="4dp"
                        app:dividerOrientation="vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_9sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/startCityTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="@string/app_name" />

                        <com.view.MTextView
                            android:id="@+id/startTimeTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/_10ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="16:55" />
                    </LinearLayout>

                    <com.view.MTextView
                        android:id="@+id/startAddressTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/textSub23Pro_gray"
                        android:textSize="@dimen/_11ssp"
                        app:customTypeFace="@string/system_regular"
                        tools:text="sf dfsdstwesd wet ewtwetwet  etwet wT  EDGwetf ET Wgcdd get dgstgedtewfsdsDfdre t ed tESD ET TE" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_minus3sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    app:srcCompat="@drawable/round_shape"
                    app:tint="#CA3939" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_minus3sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.view.MTextView
                            android:id="@+id/endCityTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text23Pro_Dark"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="@string/app_name" />

                        <com.view.MTextView
                            android:id="@+id/endTimeTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/_10ssp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="16:55" />
                    </LinearLayout>

                    <com.view.MTextView
                        android:id="@+id/endAddressTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_9sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/textSub23Pro_gray"
                        android:textSize="@dimen/_11ssp"
                        app:customTypeFace="@string/system_regular"
                        tools:text="@string/app_name" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp">

            <com.view.MTextView
                android:id="@+id/dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_10ssp"
                app:customTypeFace="@string/system_semi_bold"
                tools:text="tue, 13th feb 23" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|center"
                android:orientation="vertical">

                <com.view.MTextView
                    android:id="@+id/priceTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/_10ssp"
                    app:customTypeFace="@string/system_bold"
                    tools:text="$50" />

                <com.view.MTextView
                    android:id="@+id/priceMsgTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text23Pro_Light"
                    android:textSize="@dimen/_9ssp"
                    app:customTypeFace="@string/system_regular"
                    tools:text="per passenger" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <com.view.MTextView
        android:id="@+id/headingTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/text23Pro_Dark"
        android:background="@color/white"
        tools:text="@string/app_name"
        android:textSize="@dimen/_13ssp"
        app:customTypeFace="@string/system_bold" />

    <LinearLayout
        android:id="@+id/detalisArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_23_white_shadow"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical">

            <com.view.MTextView
                android:id="@+id/headingTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"
                android:textColor="@color/text23Pro_Dark"
                tools:text="@string/app_name"
                android:textSize="@dimen/_12ssp"
                app:customTypeFace="@string/system_bold" />


            <com.view.MTextView
                android:id="@+id/descTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                tools:text="@string/app_name"
                android:textAlignment="viewStart"
                android:textColor="@color/text23Pro_Light"
                android:textSize="@dimen/_12ssp"
                app:customTypeFace="@string/system_semi_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <com.view.MTextView
                    android:id="@+id/amountTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/appThemeColor_1"
                    tools:text="@string/app_name"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/system_bold" />

                <LinearLayout
                    android:id="@+id/btnArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/btn_border_2"
                    android:gravity="center_vertical|end">
                    <com.view.MTextView
                        android:id="@+id/btnTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_9sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:textColor="@color/appThemeColor_TXT_1"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text=" More Details" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btnImg"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/ic_right_arrow"
                        android:backgroundTint="@color/white" />
                </LinearLayout>
                <com.view.MTextView
                    android:id="@+id/bookRemoveTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:background="@drawable/btn_border_2"
                    android:clickable="true"
                    android:gravity="start|center_vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/white"
                    tools:text="@string/app_name"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="gone"
                    app:customTypeFace="@string/system_semi_bold"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10ssp"
    android:paddingEnd="@dimen/_10ssp">

    <View
        android:id="@+id/titleArea"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/shimmershape" />

    <LinearLayout
        android:id="@+id/serviceArea1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_below="@+id/titleArea"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="6">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/shimmershape" />

        <View
            android:layout_width="@dimen/_15ssp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/shimmershape" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/serviceArea2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@+id/serviceArea1"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        android:weightSum="6">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/shimmershape" />

        <View
            android:layout_width="@dimen/_15ssp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/shimmershape" />
    </LinearLayout>

    <View
        android:id="@+id/titleArea1"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_below="@+id/serviceArea2"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/shimmershape" />

    <View
        android:id="@+id/serviceBannerArea"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@+id/titleArea1"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/shimmershape" />

    <View
        android:id="@+id/titleArea3"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_below="@+id/serviceBannerArea"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/shimmershape" />

    <View
        android:id="@+id/serviceBannerArea1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@+id/titleArea3"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/shimmershape" />

    <LinearLayout
        android:id="@+id/serviceArea3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@+id/serviceBannerArea1"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        android:weightSum="6">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/shimmershape" />

        <View
            android:layout_width="@dimen/_15ssp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/shimmershape" />
    </LinearLayout>

</RelativeLayout>
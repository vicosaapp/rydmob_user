<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/appThemeColor_1</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/appThemeColor_Dark_1</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/appThemeColor_1</item>
        <item name="colorControlNormal">@color/appThemeColor_1</item>

        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/appThemeColor_1</item>

        <!--<item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>-->
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:forceDarkAllowed">false</item>

        <item name="android:fontFamily">@font/app_font_regular</item>

        <item name="buttonBarButtonStyle">@style/appBTStyle</item>
    </style>

    <style name="appBTStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/appThemeColor_1</item>
        <item name="android:textColorPrimary">@color/appThemeColor_1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>
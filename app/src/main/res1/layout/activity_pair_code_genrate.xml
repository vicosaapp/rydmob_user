<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sucessArea"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="gone"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/imgSuccess"
                    android:layout_width="@dimen/_185sdp"
                    android:layout_height="@dimen/_185sdp"
                    android:layout_gravity="center" />


                <com.view.MTextView
                    android:id="@+id/sucesstitleTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="start|center"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="#141414"
                    android:textSize="@dimen/_13ssp"
                    android:visibility="visible"
                    />


                <com.view.MTextView
                    android:id="@+id/sucessmsgTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="start|center"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="#646464"
                    android:textSize="@dimen/_15ssp"
                     />


                <include
                    android:id="@+id/btn_type_sucesss"
                    layout="@layout/btn_type_1"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/all_btn_height"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|center"
                    android:layout_margin="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paircodeArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    tools:ignore="UselessParent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/backBtn"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="start|end"
                        android:background="@drawable/circle_shadow_big"
                        android:elevation="@dimen/_5sdp"
                        app:srcCompat="@drawable/ic_back_button" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_padlock"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content
"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_10sdp"

                android:orientation="vertical">



                <com.view.MTextView
                    android:id="@+id/titleTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/_14sdp"

                    app:customTypeFace="@string/system_bold"
                    tools:text="user phone" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/cardView23ProBG"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10ssp">


                        <com.view.MTextView
                            android:id="@+id/msgTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_13sdp"
                            app:customTypeFace="@string/system_regular"
                            tools:text="user phone" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_150sdp"
                    app:cardBackgroundColor="@color/cardView23ProBG"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_20ssp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/ic_connection"></ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/paircodeTitleTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:textAlignment="center"
                                android:textSize="@dimen/_13sdp"
                                app:customTypeFace="@string/system_medium"
                                tools:text="user " />

                            <com.view.anim.loader.AVLoadingIndicatorView
                                android:id="@+id/loaderView"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"

                                android:background="@android:color/transparent"
                                android:visibility="visible"
                                app:indicator="BallSpinFadeLoader"
                                app:indicator_color="@color/Gray" />

                            <com.view.MTextView


                                android:id="@+id/paircodeTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textAlignment="center"
                                android:textSize="@dimen/_15sdp"
                                app:customTypeFace="@string/system_bold"
                                tools:text="user phone" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>
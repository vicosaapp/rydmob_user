<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/design_toolbar_general" />

        <LinearLayout
            android:id="@+id/inputArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardView23ProBG"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10ssp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/invite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_13sdp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="invite code" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.view.editBox.MaterialEditText
                                    android:id="@+id/inviteCodeBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_3sdp"
                                    android:textColor="#757575"
                                    android:textSize="@dimen/_13ssp"
                                    app:customTypeFace="@string/system_regular"
                                    app:met_hideUnderline="true"
                                    tools:hint="invite code" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/inviteQueryImg"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_minus35sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    app:srcCompat="@drawable/ic_referral_icon"
                                    app:tint="#757575" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/UserPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_13sdp"
                            app:customTypeFace="@string/system_semi_bold"
                            tools:text="user phone" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/mobileNoArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_7sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/countryArea"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/countryImg"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        app:srcCompat="@drawable/ic_card_default" />

                                    <com.view.MTextView
                                        android:id="@+id/countryCodeTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_3sdp"
                                        android:includeFontPadding="false"
                                        android:textAlignment="viewStart"
                                        android:textSize="@dimen/_13ssp"
                                        app:customTypeFace="@string/system_regular"
                                        tools:text="+91" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/countryDropImg"
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:layout_gravity="center|end"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        app:srcCompat="@drawable/ic_down_arrow"
                                        app:tint="@color/Gray" />
                                </LinearLayout>

                                <View
                                    android:layout_width="0.7dp"
                                    android:layout_height="@dimen/_20ssp"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:background="@color/Gray" />

                                <com.view.editBox.MaterialEditText
                                    android:id="@+id/mobileBox"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.70"
                                    android:imeOptions="actionDone"
                                    android:inputType="number"
                                    android:singleLine="true"
                                    android:textColor="#757575"
                                    android:textSize="@dimen/_13ssp"
                                    app:customTypeFace="@string/system_regular"
                                    app:met_hideUnderline="true"
                                    tools:hint="enter name" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <com.view.MTextView
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_btn_height"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/btn_border_1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        app:textAllCaps="true"
                        android:textSize="@dimen/_13sdp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="submit" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/successArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgView"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_180sdp" />
            </LinearLayout>

            <com.view.MTextView
                android:id="@+id/txtSuccessTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/_13ssp"
                app:customTypeFace="@string/system_semi_bold"
                tools:text="Congratulations!" />

            <com.view.MTextView
                android:id="@+id/txtSuccessSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textAlignment="center"
                android:textColor="#646464"
                android:textSize="@dimen/_12ssp"
                app:customTypeFace="@string/system_medium"
                tools:text="Your tracking profile has been setup. Track the Bus Location at Anytime using single tap." />

            <com.view.MTextView
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_btn_height"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/btn_border_1"
                android:gravity="center"
                app:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                app:customTypeFace="@string/system_semi_bold"
                tools:text="continue" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bgImgView"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:srcCompat="@drawable/ic_tracking_bgmap"
            app:tint="@color/gray" />
    </LinearLayout>
</layout>
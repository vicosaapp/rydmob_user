<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_70sdp"
    android:layout_height="@dimen/_80sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/calendar_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:background="@drawable/ic_square_selected">


        <com.view.MTextView
            android:id="@+id/txt_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:clickable="false"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            tools:text="Today"
            tools:textColor="@color/appThemeColor_Light_2" />

        <com.view.MTextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:gravity="center"
            android:textSize="@dimen/_24ssp"
            app:customTypeFace="@string/system_semi_bold"
            tools:text="15"
            tools:textColor="@color/appThemeColor_Dark_1" />

    </LinearLayout>
</LinearLayout>
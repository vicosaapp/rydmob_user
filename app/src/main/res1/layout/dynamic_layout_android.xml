<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/singleLineTextArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.view.MTextView
            android:id="@+id/SingleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:textAlignment="viewStart"
            android:textSize="@dimen/_13sdp"
            app:customTypeFace="@string/system_semi_bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/mobileNoArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/countrySelectArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/countryimage"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:srcCompat="@drawable/ic_card_default" />

                    <com.view.MTextView
                        android:id="@+id/countryBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:includeFontPadding="false"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/system_regular" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/countrydropimage"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:srcCompat="@drawable/ic_down_arrow"
                        app:tint="@color/Gray" />

                    <View
                        android:id="@+id/view_Country"
                        android:layout_width="0.7dp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:background="@color/Gray" />
                </LinearLayout>


                <com.view.editBox.MaterialEditText
                    android:id="@+id/textField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:textColor="#757575"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/system_regular"
                    app:met_hideUnderline="true" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectHArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.view.MTextView
            android:id="@+id/SelectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:textAlignment="viewStart"
            android:textSize="@dimen/_13sdp"
            android:visibility="gone"
            app:customTypeFace="@string/system_semi_bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardUseCompatPadding="true">

            <FrameLayout
                android:id="@+id/selectArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:visibility="gone">

                <com.view.editBox.MaterialEditText
                    android:id="@+id/selectBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:inputType="number"
                    android:textColor="#757575"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/system_regular" />

                <ImageView
                    android:id="@+id/arrowImageView"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:src="@mipmap/ic_arrow_down" />
            </FrameLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/multiLineTextArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:visibility="gone">


        <com.view.MTextView
            android:id="@+id/multiLineTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:textAlignment="viewStart"
            android:textSize="@dimen/_13sdp"
            app:customTypeFace="@string/system_semi_bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_below="@+id/multiLineTitle"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardUseCompatPadding="true">

            <com.view.editBox.MaterialEditText
                android:id="@+id/multiLineText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textSize="@dimen/_13ssp"
                app:met_accentTypeface="@string/defaultFont"
                app:met_typeface="@string/defaultFont" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
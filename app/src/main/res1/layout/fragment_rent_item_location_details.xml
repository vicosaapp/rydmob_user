<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/_12sdp"
    android:paddingEnd="@dimen/_12sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardBackgroundColor="@color/cardView23ProBG"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.view.MTextView
                    android:id="@+id/selectLocationHTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/text23Pro_Dark"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="Location" />

                <com.view.MTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardUseCompatPadding="true">

                <com.view.editBox.MaterialEditText
                    android:id="@+id/selectLocationBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:drawableEnd="@drawable/down_arrow"
                    android:textColorHint="@color/text23Pro_Light"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/text23Pro_Dark"
                    app:met_accentTypeface="@string/defaultFont"
                    app:met_hideUnderline="true"
                    app:met_typeface="@string/defaultFont"
                    tools:hint="select Location" />
            </androidx.cardview.widget.CardView>

            <com.view.MTextView
                android:id="@+id/houseNoHTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/text23Pro_Dark"
                app:customTypeFace="@string/system_semi_bold"
                tools:text="House No." />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardUseCompatPadding="true">

                <com.view.editBox.MaterialEditText
                    android:id="@+id/houseNoBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/text23Pro_Light"
                    android:textColor="@color/text23Pro_Dark"
                    app:met_accentTypeface="@string/defaultFont"
                    app:met_hideUnderline="true"
                    app:met_typeface="@string/defaultFont"
                    tools:hint="Your House Number" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.view.MTextView
                    android:id="@+id/addressHTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/text23Pro_Dark"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="Address" />

                <com.view.MTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_2sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardUseCompatPadding="true">

                <com.view.editBox.MaterialEditText
                    android:id="@+id/addressBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:scrollbars="vertical"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/text23Pro_Light"
                    android:textColor="@color/text23Pro_Dark"
                    app:met_accentTypeface="@string/defaultFont"
                    app:met_typeface="@string/defaultFont"
                    tools:hint="Enter Address" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <CheckBox
                    android:id="@+id/showAddressCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/appThemeColor_1"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/text23Pro_Dark"
                    android:theme="@style/MyCheckBox"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="@string/app_name" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
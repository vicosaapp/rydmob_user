<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">

            <com.view.MTextView
                android:id="@+id/selectServiceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_11sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_14ssp"
                app:customTypeFace="@string/system_bold"
                tools:text="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_view_23_gray_shadow"
                android:orientation="vertical"
                android:padding="@dimen/_13sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/driverNameHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="driver’s name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_minus1sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/driverNameET"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_33sdp"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:singleLine="true"
                            android:textColor="@color/text23Pro_Dark"
                            android:textColorHint="@color/text23Pro_Light"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            app:met_hideUnderline="true"
                            tools:hint="enter amount" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/driverPhoneHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="driver’s name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_minus1sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/card_view_23_white_shadow"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/countryArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/countryImg"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_card_default" />

                            <com.view.MTextView
                                android:id="@+id/countryCodeTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:includeFontPadding="false"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13ssp"
                                app:customTypeFace="@string/system_regular"
                                tools:text="+91" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/countryDropImg"
                                android:layout_width="@dimen/_7sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:layout_marginStart="@dimen/_6sdp"
                                app:srcCompat="@drawable/ic_down_arrow_23" />
                        </LinearLayout>

                        <View
                            android:layout_width="0.7dp"
                            android:layout_height="@dimen/_14ssp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:background="@color/text23Pro_Light" />

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/driverPhoneET"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_33sdp"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="@color/text23Pro_Dark"
                            android:textColorHint="@color/text23Pro_Light"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            app:met_hideUnderline="true"
                            tools:hint="mobile" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.view.MTextView
                android:id="@+id/carDetailsHTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_11sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_14ssp"
                app:customTypeFace="@string/system_bold"
                tools:text="car details" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_view_23_gray_shadow"
                android:orientation="vertical"
                android:padding="@dimen/_13sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/carMakeHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="make" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_minus1sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/carMakeET"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_33sdp"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:singleLine="true"
                            android:textColor="@color/text23Pro_Dark"
                            android:textColorHint="@color/text23Pro_Light"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            app:met_hideUnderline="true"
                            tools:hint="enter amount" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/carModelHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="model" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_minus1sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/carModelET"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_33sdp"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:singleLine="true"
                            android:textColor="@color/text23Pro_Dark"
                            android:textColorHint="@color/text23Pro_Light"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            app:met_hideUnderline="true"
                            tools:hint="enter amount" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/carNumberPlateHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="car's number plate" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_minus1sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/carNumberPlateET"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_33sdp"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:singleLine="true"
                            android:textColor="@color/text23Pro_Dark"
                            android:textColorHint="@color/text23Pro_Light"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            app:met_hideUnderline="true"
                            tools:hint="enter amount" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/carColorHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="car's color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_minus1sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/carColorET"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_33sdp"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:singleLine="true"
                            android:textColor="@color/text23Pro_Dark"
                            android:textColorHint="@color/text23Pro_Light"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            app:met_hideUnderline="true"
                            tools:hint="enter amount" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/carImageHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="car image" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp">

                        <LinearLayout
                            android:id="@+id/chooseFileView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_view_23_white_dotted_shadow"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_24sdp"
                                app:srcCompat="@drawable/ic_choose_photo" />

                            <com.view.MTextView
                                android:id="@+id/selectFileTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_9sdp"
                                android:layout_marginBottom="@dimen/_24sdp"
                                android:textAlignment="center"
                                android:textSize="@dimen/_12ssp"
                                app:customTypeFace="@string/system_semi_bold"
                                tools:text="Choose File" />
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="8dp">

                            <RelativeLayout
                                android:id="@+id/viewImg"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_140sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/setImgView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    tools:ignore="TooDeepLayout" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/editDocImg"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="@dimen/_7sdp"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/ic_edit_pencil_document" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/carNotesHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12ssp"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="additional notes" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_marginStart="@dimen/_minus1sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/card_view_23_white_shadow">

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/carNotesET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:gravity="top"
                            android:textColor="@color/text23Pro_Dark"
                            android:textColorHint="@color/text23Pro_Light"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/system_regular"
                            app:met_hideUnderline="true"
                            tools:hint="enter amount" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
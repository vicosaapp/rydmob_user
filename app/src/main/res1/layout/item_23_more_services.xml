<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:background="@drawable/card_view_23_white_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingTop="10dp"
            android:paddingEnd="4dp"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/catImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_8sdp"
                tools:src="@drawable/launcher" />

            <com.utils.NonBreakingPeriodTextView
                android:id="@+id/catNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:ellipsize="end"
                android:ems="3"
                android:focusable="false"
                android:gravity="center|top"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                app:customTypeFace="@string/system_bold"
                tools:text="Taxifdsfdffsdfsdfdsfsddsfsdfsdfsdfsdfsd\ntaxi" />

            <com.utils.NonBreakingPeriodTextView
                android:id="@+id/catDescTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:ellipsize="end"
                android:ems="3"
                android:focusable="false"
                android:gravity="center|top"
                android:maxLines="3"
                android:minLines="3"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:customTypeFace="@string/system_regular"
                tools:text="Taxifdsfdffsdfsdfdsfsddsfsdfsdfsdfsdfsd\ntaxi" />
        </LinearLayout>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_view_23_white_shadow"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_9sdp"
            android:paddingTop="@dimen/_11sdp"
            android:paddingEnd="@dimen/_9sdp"
            android:paddingBottom="@dimen/_11sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/catImgView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:srcCompat="@mipmap/ic_no_icon" />

            <com.view.MTextView
                android:id="@+id/uberXCatNameTxtView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="6"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textAlignment="viewStart"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/_14ssp"
                app:customTypeFace="@string/system_bold"
                tools:text="@string/app_name" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrowImageView"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_arrow_right"
                app:tint="@color/black"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/serviceCheckbox"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:background="@drawable/border_23"
                android:button="@drawable/manage_checkbox_23"
                android:theme="@style/MyCheckBox"
                android:visibility="gone"
                tools:visibility="visible" />

            <RadioButton
                android:id="@+id/serviceradioBtn"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/appThemeColor_1"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:padding="0dp">


    <LinearLayout

        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"

            android:id="@+id/bannerAreaContainerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_square_shadow">

            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <LinearLayout
                    android:id="@+id/linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView

                        android:id="@+id/serviceImg"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:id="@+id/contentView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="start"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:maxLines="1"
                            android:id="@+id/serviceNameTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:textAlignment="viewStart"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/_14ssp"



                            app:customTypeFace="@string/system_semi_bold" />

                        <com.view.MTextView
                            android:id="@+id/serviceDescTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:maxLines="4"
                            android:textAlignment="viewStart"
                            android:textColor="#202020"
                            android:textSize="@dimen/_10ssp"
                            app:customTypeFace="@string/system_regular" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

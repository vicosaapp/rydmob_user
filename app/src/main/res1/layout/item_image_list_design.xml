<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainArea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/_12sdp"
    android:paddingTop="@dimen/_6sdp"
    android:paddingEnd="@dimen/_12sdp"
    android:paddingBottom="@dimen/_6sdp">

    <LinearLayout
        android:id="@+id/codeArea"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:background="@drawable/round_shape"
        android:orientation="horizontal">

        <com.view.MTextView
            android:id="@+id/codeTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/app_login_txt_color"
            android:textSize="@dimen/_10ssp"
            app:customTypeFace="@string/system_semi_bold"
            tools:text="EN" />
    </LinearLayout>

    <com.view.MTextView
        android:id="@+id/rowTitleTxtView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:includeFontPadding="false"
        android:text="@string/app_name"
        android:textAlignment="viewStart"
        android:textColor="@color/text23Pro_Dark"
        android:textSize="@dimen/_10ssp"
        app:customTypeFace="@string/system_semi_bold" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgCheck"
        android:layout_width="@dimen/_19sdp"
        android:layout_height="@dimen/_19sdp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_select_check_mark" />

    <com.view.anim.loader.AVLoadingIndicatorView
        android:id="@+id/progress"
        android:layout_width="@dimen/_19sdp"
        android:layout_height="@dimen/_19sdp"
        android:layout_gravity="center"
        android:backgroundTint="@color/appThemeColor_1"
        android:visibility="gone"
        app:indicator="LineSpinFadeLoader"
        app:indicator_color="@color/appThemeColor_1" />
</LinearLayout>
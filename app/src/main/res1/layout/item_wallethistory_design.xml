<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_9sdp"
    android:background="@drawable/card_view_23_white_shadow"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrowImg"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_credit_new" />

        <LinearLayout
            android:id="@+id/transactionDetailArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <com.view.MTextView
                android:id="@+id/transactionDesVTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start|center"
                android:minLines="1"
                android:textAlignment="viewStart"
                android:textColor="@color/text23Pro_Dark"
                android:textSize="@dimen/txt_size_14"
                app:customTypeFace="@string/system_medium"
                tools:text="Debited for trip" />

            <com.view.MTextView
                android:id="@+id/transactiondateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start|center"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textColor="@color/text23Pro_Light"
                android:textSize="@dimen/_12ssp"
                app:customTypeFace="@string/system_regular"
                tools:text="12 july.2019" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_3sdp"
            android:orientation="vertical">

            <com.view.MTextView
                android:id="@+id/tranasctionBalVTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/appThemeColor_1"
                android:textSize="@dimen/_14ssp"
                app:customTypeFace="@string/system_medium"
                tools:text="$55.11" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
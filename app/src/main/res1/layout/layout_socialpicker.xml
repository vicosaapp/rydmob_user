<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:padding="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_23_gray_shadow"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/closeImg"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/circle_shadow_big"
            android:gravity="end"
            android:padding="@dimen/_10sdp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_close_button" />

        <com.view.MTextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/text23Pro_Dark"
            android:textSize="@dimen/_14sdp"
            android:visibility="visible"
            app:customTypeFace="@string/system_bold"
            tools:ignore="RelativeOverlap"
            tools:text="Choose an account" />

        <LinearLayout
            android:id="@+id/social_bottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTxt"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/card_view_23_white_shadow"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/googleArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/circle_shadow_big"
                        app:srcCompat="@drawable/ic_google_icon" />

                    <com.view.MTextView
                        android:id="@+id/googleHtxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:includeFontPadding="false"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Google" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imagearrowG"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="end|center_vertical"
                        android:rotation="-90"
                        app:srcCompat="@drawable/ic_arrow_point_to_down"
                        app:tint="@color/text23Pro_Light" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/view23ProBG" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/facebookArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/circle_shadow_big"
                        app:srcCompat="@drawable/ic_fb_icon" />

                    <com.view.MTextView
                        android:id="@+id/fbHTxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:includeFontPadding="false"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Facebook" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageArrowF"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="end|center_vertical"
                        android:rotation="-90"
                        app:srcCompat="@drawable/ic_arrow_point_to_down"
                        app:tint="@color/text23Pro_Light" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/view23ProBG" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linkdinArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_linkedin" />

                    <com.view.MTextView
                        android:id="@+id/linkedinHtxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:includeFontPadding="false"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Dark"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Linkdin" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageArrowL"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="end|center_vertical"
                        android:rotation="-90"
                        app:srcCompat="@drawable/ic_arrow_point_to_down"
                        app:tint="@color/text23Pro_Light" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/view23ProBG" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/smartLoginArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/circle_shadow_big"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_finger_print_icon"
                    app:tint="@color/appThemeColor_1" />

                <com.view.MTextView
                    android:id="@+id/smartLoginHtxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:textAlignment="viewStart"
                    android:textColor="@color/text23Pro_Dark"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible"
                    app:customTypeFace="@string/system_semi_bold"
                    tools:text="smart Login with device ID" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageArrowS"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="end|center_vertical"
                    android:rotation="-90"
                    app:srcCompat="@drawable/ic_arrow_point_to_down"
                    app:tint="@color/text23Pro_Light" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/smartLoginDisableArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/circle_shadow_big"
                    android:backgroundTint="@color/imageCircleBg23Pro_Light"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_finger_print_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/smartLoginDisableHtxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:includeFontPadding="false"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Light"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible"
                        app:customTypeFace="@string/system_semi_bold"
                        tools:text="Face ID/Touch ID/Passcode" />

                    <com.view.MTextView
                        android:id="@+id/smartLoginDisableNoteTxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text23Pro_Light"
                        android:textSize="@dimen/_11sdp"
                        app:customTypeFace="@string/system_medium"
                        tools:text="Face ID/Touch ID/Passcode" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:background="@drawable/btn_border_success_dialog"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:minHeight="@dimen/_320sdp"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgView"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp" />
    </LinearLayout>

    <com.view.MTextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/_18ssp"
        app:customTypeFace="@string/system_medium"
        tools:text="Your Account Has Been Activated Successfully!" />

    <com.view.MTextView
        android:id="@+id/messageNoteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#646464"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone"
        app:customTypeFace="@string/system_medium"
        tools:text="Your Account Has Be!" />

    <LinearLayout
        android:id="@+id/bottomview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@drawable/btn_border"
        android:padding="@dimen/_2sdp">

        <include
            android:id="@+id/btn_type2"
            layout="@layout/btn_type_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_btn_height"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <com.view.MTextView
        android:id="@+id/cancelTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#646464"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone"
        app:customTypeFace="@string/system_medium"
        tools:text="Cancel" />
</LinearLayout>
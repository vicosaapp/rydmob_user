<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/_10sdp"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/lefttuserImageview"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@mipmap/ic_no_pic_user"
                android:visibility="gone"
                tools:visibility="visible" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="@dimen/_100sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/activity_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/message_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:padding="@dimen/_5sdp"
                    android:textAlignment="viewStart"
                    android:textStyle="normal|bold"
                    android:visibility="gone"
                    tools:text="Testreyp5yuirgjhkllrgrynb5uyb 4-]"
                    tools:visibility="visible" />


                <com.view.MTextView
                    android:id="@+id/message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible"
                    app:customTypeFace="@string/system_regular"
                    tools:text="sopfhbvhjreyh' b4tbv76yt9p7546hn[bi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_minus14sdp"
                android:layout_marginTop="@dimen/_minus20sdp"
                android:layout_marginEnd="@dimen/_minus14sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/rightshape"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_baseline_play_arrow_24"
                    android:visibility="gone"
                    app:tint="@color/appThemeColor_1"
                    tools:visibility="visible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/leftshap"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:gravity="end"
                    android:rotationY="180"
                    android:src="@drawable/ic_baseline_play_arrow_24"
                    android:visibility="gone"
                    app:tint="@color/appThemeColor_1"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_minus12sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/left_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="gone"
                    tools:text="06:30 Am"
                    tools:visibility="visible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView

                    android:id="@+id/right_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:textAlignment="viewStart"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="gone"
                    tools:text="06:30 Am"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/rightuserImageview"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@mipmap/ic_no_pic_user"
                android:visibility="gone"
                tools:visibility="visible" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
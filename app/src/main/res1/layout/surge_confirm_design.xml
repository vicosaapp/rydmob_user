<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.view.MTextView
        android:id="@+id/headerMsgTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="Surge"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:customTypeFace="@string/system_regular" />

    <com.view.MTextView
        android:id="@+id/surgePriceTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="1.2x"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        app:customTypeFace="@string/system_semi_bold" />


    <com.view.MTextView
        android:id="@+id/payableTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="payable amount"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:customTypeFace="@string/system_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.view.MTextView
            android:id="@+id/payableAmountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone"
            app:customTypeFace="@string/system_medium" />

        <com.view.MTextView
            android:id="@+id/payableAmountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/appThemeColor_1"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone"
            app:customTypeFace="@string/system_medium" />
    </LinearLayout>

    <include
        android:id="@+id/btn_type2"
        layout="@layout/btn_type_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_btn_height"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp" />

    <com.view.MTextView
        android:id="@+id/tryLaterTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="TRY LATER"
        android:textColor="@color/gray"
        android:textSize="@dimen/_15sdp"
        app:customTypeFace="@string/system_regular" />

</LinearLayout>